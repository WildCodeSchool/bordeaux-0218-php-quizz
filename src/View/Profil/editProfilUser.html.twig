{% extends 'layout.html.twig' %}

{% block content %}
{% for info in profil %}

<div class="container-fluid">
		<div class="row">
			<div class="col-xs-3 col-md-3">
				<b>Nom</b>
			</div>
			<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le nom de l'utilisateur -->
        <input type="text" value = "{{ info.firstName }}" />
			</div>
			<div class="col-xs-3 col-md-3">

			</div>
		</div>
</br>
		<div class="row">
			<div class="col-xs-3 col-md-3">
				<b>Prénom</b>
			</div>
			<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le prénom de l'utilisateur -->
        <input type="text" value = "{{ info.lastName }}" />
			</div>
			<div class="col-xs-3 col-md-3">

			</div>
		</div>
</br>
		<div class="row">
			<div class="col-xs-3 col-md-3">
				<b>Adresse</b>
			</div>
			<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré l'adresse postale de l'utilisateur -->
        <input type="text" value = "{{ info.adress }}" />
			</div>
			<div class="col-xs-3 col-md-3">

			</div>
		</div>
</br>
		<div class="row">
			<div class="col-xs-3 col-md-3">
				<b>E-mail</b>
			</div>
			<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré l'adresse mail de l'utilisateur -->
				<input type="text" value = "{{ info.mail }}" />
			</div>
			<div class="col-xs-3 col-md-3">

			</div>
		</div>
</br>
		<div class="row">
			<div class="col-xs-3 col-md-3">
				<b>Password</b>
			</div>
			<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le password de l'utilisateur -->
        <input type="text" value = "{{ info.password }}" />
			</div>
			<div class="col-xs-3 col-md-3">

			</div>
		</div>
	</div>
{% endfor %}
{% endblock %}
