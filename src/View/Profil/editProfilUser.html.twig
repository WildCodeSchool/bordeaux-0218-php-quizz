{% extends 'layout.html.twig' %}
{% block content %}
{% for info in profil %}
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-3 col-md-3">
			<b>Nom</b>
		</div>
		<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le nom de l'utilisateur -->
			<input type="text" value = "{{ info.firstName }}" />
		</div>
		<div class="col-xs-3 col-md-3">
		</div>
	</div>
</br>
<div class="row">
	<div class="col-xs-3 col-md-3">
		<b>Prénom</b>
	</div>
	<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le prénom de l'utilisateur -->
		<input type="text" value = "{{ info.lastName }}" />
	</div>
	<div class="col-xs-3 col-md-3">
	</div>
</div>
</br>
<div class="row">
	<div class="col-xs-3 col-md-3">
		<b>Adresse</b>
	</div>
	<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré l'adresse postale de l'utilisateur -->
		<input type="text" value = "{{ info.adress }}" />
	</div>
	<div class="col-xs-3 col-md-3">
	</div>
</div>
</br>
<div class="row">
	<div class="col-xs-3 col-md-3">
		<b>E-mail</b>
	</div>
	<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré l'adresse mail de l'utilisateur -->
		<input type="text" value = "{{ info.mail }}" />
	</div>
	<div class="col-xs-3 col-md-3">
	</div>
</div>
</br>
<div class="row">
	<div class="col-xs-3 col-md-3">
		<b>Password</b>
	</div>
	<div class="col-xs-6 col-md-6"><!-- colonne ou sera récupéré le password de l'utilisateur -->
		<input type="text" value = "{{ info.password }}" />
	</div>
	<div class="col-xs-3 col-md-3">
	</div>
</div>
</div>


{% extends 'layout.html.twig' %}
{% block content %}
{% for info in profil %}
	<div class="container">
                <div class="jumbotron">
                  <div class="row">
                      <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                          <img src="https://www.svgimages.com/svg-image/s5/man-passportsize-silhouette-icon-256x256.png" alt="stack photo" class="img">
                      </div>
                      <div class="col-md-8 col-xs-12 col-sm-6 col-lg-8">
                          <div class="container" style="border-bottom:1px solid black">
                            <h2><input type="text" value = "{{ info.lastName }}" />  <input type="text" value = "{{ info.firstName }}" /></h2>
                          </div>
                            <hr>
                          <ul class="container details">
                            <li><span class="glyphicon glyphicon-envelope one" style="width:50px;"></span><input type="text" value = "{{ info.mail }}" /></li>
                            <li><span class="glyphicon glyphicon-map-marker one" style="width:50px;"></span><input type="text" value = "{{ info.adress }}" /></li>
                            <li><p> Password : <input type="text" value = "{{ info.password }}" /></p></li>
														<li><img src="/assets/images/cup.svg" class="logoscore"><img src="/assets/images/picto.png" class="picto"></li>
                          </ul>
                      </div>
                  </div>
                </div>
{% endfor %}

	<p>Score Moyen</p>
	<p>{{ averageScore }}</p>

{% endblock %}
{% endfor %}
{% endblock %}
