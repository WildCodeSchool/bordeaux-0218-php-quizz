{% extends 'layout.html.twig' %}

{% block content %}
	

		<div class="container">
			<form method="post" action="" class="choice row">
				<div class="col-xs-8 col-xs-offset-2 text-center container">
					<div class="row">
						<label for="chosenTheme" class="col-xs-12 text-center labelChoice">Sélectionner un Thème</label>
						
						<div class="selectTheme col-xs-12 container">
							<div class="row">
						     	<select name="chosenTheme" id="chosenTheme" class="col-xs-3 col-xs-offset-3">
						     		<option value="">All Quizz</option>
{% for info in themes %}
				          			<option class="h-5" value="{{info.theme}}">{{info.theme}}</option>	
{% endfor %}
			    				</select>

			     				<input type="submit"  class="myButton col-xs-2 col-xs-offset-1" name="themeChoice" value="Valider" />
			     			</div>
			     		</div>
					</div>
				</div>
			</form>

			<form method="post" action="/quizz" class="row">
				<div class="choice container col-xs-8 col-xs-offset-2 text-center">
					<div class="row">
						<label for="chosenQuizz" class="col-xs-12 labelChoice">Sélectionner un Quizz</label>
						<div class="row">	
							<select name="chosenQuizz" id="chosenQuizz" class="col-xs-3 col-xs-offset-3">
{% for info in choices %}
				          		<option value="{{ info.id }}">{{ info.quizzName }}</option>
{% endfor %}
				     		</select>
				     		<input type="submit" class="myButton col-xs-2 col-xs-offset-1" name="quizzChoice" value="Valider" />
				     	</div>
				   	</div>
					
				</div>
			</form>
		</div>

{% endblock %}













