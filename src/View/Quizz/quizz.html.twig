{% extends 'layout.html.twig' %}

{% block content %}

<h1>Questions</h1>
        <form method="post" action="/resultat">
{% for question in questions %}
        <p>{{ question.questionName }}</p>
    {% for answer in answers %}
        {% for answer1 in answer %}
            {% if answer1.idQuestion == question.id %}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="{{ answer1.idQuestion }}" id="exampleRadios1" value="{{ answer1.isTrue }}">
          <label class="form-check-input" for="exampleRadios1">{{ answer1.name }}
          </label>
        </div>
{% endif %}
{% endfor %}
{% else %}
        <p>Nothing to display</p>
{% endfor %}
{% endfor %}
        <button type="submit" class="btn btn-primary"> Valider </button>
        </form>



{% endblock %}