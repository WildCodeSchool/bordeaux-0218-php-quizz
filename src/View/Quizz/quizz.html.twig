{% extends 'layout.html.twig' %}

{% block content %}

        <form method="post" action="/resultat">
{% for question in questions %}
        <p>{{ question.questionName }}</p>
    {% for answer in answers %}
        {% for answer1 in answer %}
            {% if answer1.idQuestions == question.id %}
        <div class="form-check">
          <input class="form-check-input" type="radio" name="{{ answer1.idQuestions }}" id="exampleRadios1" value="{{ answer1.isTrue }}">
          <label class="form-check-input" for="exampleRadios1">{{ answer1.name }}
          </label>
        </div>
{% endif %}
{% endfor %}
{% else %}
        <p>Nothing to display</p>
{% endfor %}
{% endfor %}
        <button type="submit" class="btn btn-primary"> Valider </button>
        </form>

       {#  <a href="/choice">Retour aux choix des quizz</a> #}


{% endblock %}
{% endblock %}
